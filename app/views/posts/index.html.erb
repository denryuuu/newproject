<% content_for :title, "投稿一覧 | EBC MAP" %>

<h1>聖地一覧</h1>
<div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">掲示板がありません</div>
        <% end %>
      </div>
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
<%= link_to '聖地投稿', new_post_path, class: "btn btn-primary" %>