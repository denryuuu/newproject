<%= form_with model: @post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
  <%= f.label :location_name, "場所の名称" %>
  <%= f.text_field :location_name, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, class: "form-control", id: "place-input" %>
</div>
  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", row: "10", style: "height: 200px" %>
  </div>
  <div class="mb-3">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, class: "form-control", accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>
    <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
