<%= search_form_for q, url: url do |f| %>
  <div class="input-group mb-3">
    <%= f.text_field :title_or_content_or_location_name_or_address_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
    <div class="input-group-append">
      <%= f.submit '検索', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>